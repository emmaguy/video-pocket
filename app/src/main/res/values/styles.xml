<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/accent</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:colorPrimary" tools:targetApi="lollipop">@color/primary</item>
        <item name="colorPrimary">@color/primary</item>

        <item name="android:colorPrimaryDark" tools:targetApi="lollipop">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <item name="android:theme">@style/Theme</item>
    </style>

    <style name="AppThemeDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/accent</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowTitleStyle">@style/AppThemeDialogTextStyle</item>
    </style>

    <style name="AppThemeDialogTextStyle">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="Theme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>
    </style>

</resources>
